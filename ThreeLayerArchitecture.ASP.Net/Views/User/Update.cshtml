
@model UserUpdateViewModel;

<h1>Update view</h1>


<html>
<head>
    <title></title>

</head>
<body>
    <form class="form-horizontal"  asp-controller="User" asp-action="Update" method="Post">
        
        

        <div class="form-group">
            <lable class="control-lable col-sm-2" asp-for="FirstName">FirstName</lable>
            <div class="col-sm-10">
                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter user FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-lable col-sm-2" asp-for="LastName">LastName</lable>
            <div class="col-sm-10">
                <input type="text" asp-for="LastName" class="form-control" placeholder="Enter user LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-lable col-sm-2" asp-for="GenderId">GenderId</lable>

            <div>
                <select class="col-sm-10" asp-for="GenderId">
                    <option>--Select Gender--</option>
                    @{
                        foreach (var gen in ViewBag.GenderList)
                        {
                            <option value="@gen.Id">@gen.TExt</option>
                        }
                    }
                </select>
            </div>
            <span asp-validation-for="GenderId" class="text-danger"></span>

        </div>



        <div class="form-group">
            <lable class="control-lable col-sm-2" asp-for="MobileNumber">MobileNumber</lable>
            <div class="col-sm-10">
                <input type="text" asp-for="MobileNumber" class="form-control" placeholder="Enter user MobileNumber" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-lable col-sm-2">AdharNumber</lable>
            <div class="col-sm-10">
                <input type="text" asp-for="AdharNumber" class="form-control" placeholder="Enter user AdharNumber" />
                <span asp-validation-for="AdharNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            Category
            @{
                foreach (var item in ViewBag.CategoryList)
                {
                    <lable asp-for="Category">
                        <input type="radio" name="Category" asp-for="Category" value="@item.Name">@item.Name
                    </lable>
                }
                <span asp-validation-for="Category" class="text-danger"></span>
            }

        </div>


        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </div>
    </form>
</body>
</html>
